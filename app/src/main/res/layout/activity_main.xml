<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_road">

    <View
        android:id="@+id/road"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:background="#424242" />

    <View
        android:id="@+id/bumper_left"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/road"
        android:background="#F44336" />

    <View
        android:id="@+id/bumper_right"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/road"
        android:background="#F44336" />

    <View
        android:id="@+id/start_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@id/player_car"
        android:layout_marginBottom="-80dp"
        android:background="#FFFFFF" />

    <View
        android:id="@+id/line1"
        android:layout_width="10dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF" />

    <View
        android:id="@+id/line2"
        android:layout_width="10dp"
        android:layout_height="80dp"
        android:layout_below="@+id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF" />

    <View
        android:id="@+id/line3"
        android:layout_width="10dp"
        android:layout_height="80dp"
        android:layout_below="@+id/line2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/cone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_cone" />

    <ImageView
        android:id="@+id/cone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cone1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_cone" />

    <ImageView
        android:id="@+id/cone3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cone2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_cone" />

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/player_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android.layout_centerHorizontal="true"
        android:src="@drawable/ic_racer" />

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_arrow_left" />

    <ImageButton
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_arrow_right" />

</RelativeLayout>
